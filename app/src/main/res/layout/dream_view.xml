<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="140dp" android:id="@id/each_dream_view">
    <android.support.v7.widget.CardView
            android:layout_width="298dp"
            android:layout_height="111dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/each_dream_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.363" app:layout_constraintHorizontal_bias="0.495">
        <TextView
                android:text="Title"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" android:id="@+id/title_text_view"
                android:layout_width="match_parent"/>
        <TextView
                android:text="Description"
                android:layout_margin="40dp"
                android:layout_width="247dp"
                android:layout_height="wrap_content" android:id="@+id/desc_text_view"/>
        <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="?attr/actionModeShareDrawable"
                android:id="@+id/share_btn"
                android:layout_marginTop="78dp"
                android:layout_marginHorizontal="250dp"/>
        <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="?attr/actionModeCopyDrawable"
                android:id="@+id/copy_btn"
                android:layout_marginTop="78dp"
                android:layout_marginHorizontal="200dp"/>
        <TextView
                android:id="@+id/card_view_date"
                android:text="13/12/2019"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="78dp"
                android:layout_marginHorizontal="10dp"
        />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>