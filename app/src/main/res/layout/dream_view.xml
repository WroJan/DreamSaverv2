<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp" android:id="@id/each_dream_view">
    <android.support.v7.widget.CardView
            android:layout_width="316dp"
            android:layout_height="94dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/each_dream_view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="33dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="62dp">
        <TextView
                android:text="Title"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" android:id="@+id/title_text_view"
                android:layout_width="match_parent"/>
        <TextView
                android:text="Description"
                android:layout_margin="40dp"
                android:layout_width="247dp"
                android:layout_height="29dp" android:id="@+id/desc_text_view"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>